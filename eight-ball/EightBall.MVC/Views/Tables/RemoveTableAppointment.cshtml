@model EightBall.MVC.Models.RemoveTableAppointmentViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Da li ste sigurni da želite da obrišete ovaj slot</h3>
<div>
    <hr />
    <h4>@Model.Table.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Start)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Start)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.End)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.End)
        </dd>
    </dl>
    <form asp-action="RemoveTableAppointment">
        <input type="hidden" asp-for="@Model.Table.Id" />
        <input type="hidden" asp-for="@Model.Appointment.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>